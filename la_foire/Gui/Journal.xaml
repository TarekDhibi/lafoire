<Window x:Class="la_foire.Gui.Journal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Journal" Height="600" Width="800" Icon="../Img/hist.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Grid.Column="0"  Grid.Row="0" Margin="20" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="13*" />

            </Grid.RowDefinitions>
            <Label Content="Journal des utilisateurs" Grid.Row="0" Foreground="White" FontSize="24"  FontFamily="Segoe UI Light" Background="#82c4c8" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
            <DataGrid x:Name="DataGridAgents" Grid.Row="1" Background="White" BorderBrush="#82c4c8" AutoGenerateColumns="True" CanUserAddRows="False"  >

            </DataGrid>
        </Grid>

    </Grid>
</Window>
